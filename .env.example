# Configuración del Servidor PyAO
# Copia este archivo a .env y ajusta los valores según tu entorno

# ============================================
# Servidor TCP
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=7666
SERVER_MAX_CONNECTIONS=1000

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_DECODE_RESPONSES=true
REDIS_SOCKET_TIMEOUT=5.0
REDIS_SOCKET_CONNECT_TIMEOUT=5.0

# ============================================
# Gameplay - Límites del Juego
# ============================================
GAME_MAX_INVENTORY_SLOTS=20
GAME_MAX_BANK_SLOTS=40
GAME_MAX_PARTY_MEMBERS=6
GAME_RESPAWN_TIME_SECONDS=180
GAME_MAX_LEVEL=50

# ============================================
# Sistema de Hambre y Sed
# ============================================
HUNGER_THIRST_ENABLED=true
HUNGER_THIRST_INTERVAL_SED=180          # Segundos entre reducciones de sed
HUNGER_THIRST_INTERVAL_HAMBRE=180       # Segundos entre reducciones de hambre
HUNGER_THIRST_REDUCCION_AGUA=10         # Puntos de agua reducidos por intervalo
HUNGER_THIRST_REDUCCION_HAMBRE=10       # Puntos de hambre reducidos por intervalo

# ============================================
# Sistema de Reducción de Oro
# ============================================
GOLD_DECAY_ENABLED=true
GOLD_DECAY_PERCENTAGE=1.0               # Porcentaje de oro reducido
GOLD_DECAY_INTERVAL_SECONDS=60.0        # Segundos entre reducciones
